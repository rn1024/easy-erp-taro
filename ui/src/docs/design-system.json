{
  "name": "WeChat风格任务管理应用设计系统",
  "version": "1.0.0",
  "description": "基于WeChat设计语言的移动优先任务管理和工作流应用",
  "lastUpdated": "2025-01-09",
  
  "designPrinciples": {
    "primary": [
      "移动优先 - Mobile First",
      "WeChat原生体验 - Native WeChat Experience", 
      "简洁直观 - Clean & Intuitive",
      "触摸友好 - Touch Friendly",
      "性能优化 - Performance Optimized"
    ],
    "secondary": [
      "一致性 - Consistency",
      "可访问性 - Accessibility", 
      "渐进增强 - Progressive Enhancement",
      "响应式设计 - Responsive Design"
    ]
  },

  "colorPalette": {
    "primary": {
      "blue": {
        "500": "#3b82f6",
        "600": "#2563eb", 
        "700": "#1d4ed8",
        "usage": "主要操作按钮、链接、焦点状态"
      }
    },
    "semantic": {
      "success": {
        "color": "#10b981",
        "usage": "成功状态、完成任务"
      },
      "warning": {
        "color": "#f59e0b", 
        "usage": "警告状态、待处理"
      },
      "error": {
        "color": "#ef4444",
        "usage": "错误状态、删除操作"
      },
      "info": {
        "color": "#06b6d4",
        "usage": "信息提示、中性操作"
      }
    },
    "neutral": {
      "gray": {
        "50": "#f9fafb",
        "100": "#f3f4f6", 
        "200": "#e5e7eb",
        "300": "#d1d5db",
        "400": "#9ca3af",
        "500": "#6b7280",
        "600": "#4b5563",
        "700": "#374151",
        "800": "#1f2937",
        "900": "#111827"
      }
    },
    "background": {
      "light": {
        "primary": "#fafafa",
        "secondary": "#f5f5f7",
        "card": "#ffffff"
      },
      "dark": {
        "primary": "#0f172a",
        "secondary": "#1e293b", 
        "card": "#334155"
      }
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "system-ui, -apple-system, sans-serif",
      "description": "使用系统默认字体保证最佳性能和原生感受"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem", 
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "note": "避免在CSS中直接使用Tailwind字体大小类，使用默认HTML元素样式"
    },
    "fontWeights": {
      "normal": "400",
      "medium": "500", 
      "semibold": "600",
      "bold": "700",
      "note": "避免在CSS中直接使用Tailwind字体粗细类，使用默认HTML元素样式"
    },
    "lineHeight": {
      "tight": "1.25",
      "normal": "1.5", 
      "relaxed": "1.75",
      "note": "避免在CSS中直接使用Tailwind行高类，使用默认HTML元素样式"
    }
  },

  "spacing": {
    "scale": "基于4px的8点网格系统",
    "touch": {
      "minimum": "44px",
      "recommended": "48px",
      "description": "最小触摸目标尺寸"
    },
    "padding": {
      "xs": "0.25rem", 
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem", 
      "xl": "2rem"
    },
    "margin": {
      "xs": "0.25rem",
      "sm": "0.5rem", 
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem"
    }
  },

  "borderRadius": {
    "none": "0px",
    "sm": "0.125rem",
    "md": "0.375rem", 
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "full": "9999px",
    "wechatStyle": {
      "card": "0.5rem",
      "button": "0.75rem", 
      "modal": "1rem",
      "input": "0.75rem"
    }
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
    "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
    "bottomSheet": "0 -10px 25px -3px rgba(0, 0, 0, 0.1), 0 -4px 6px -2px rgba(0, 0, 0, 0.05)"
  },

  "animation": {
    "duration": {
      "fast": "150ms",
      "normal": "300ms", 
      "slow": "500ms"
    },
    "easing": {
      "ease": "ease",
      "easeIn": "ease-in",
      "easeOut": "ease-out", 
      "easeInOut": "ease-in-out"
    },
    "wechatTransitions": {
      "bottomSheet": "transform 300ms ease-out",
      "button": "all 150ms ease-in-out",
      "card": "all 200ms ease-in-out"
    }
  },

  "iconography": {
    "library": "lucide-react",
    "sizes": {
      "xs": "16px",
      "sm": "20px", 
      "md": "24px",
      "lg": "32px",
      "xl": "48px"
    },
    "usage": {
      "navigation": "24px",
      "buttons": "20px", 
      "cards": "20px",
      "status": "16px"
    }
  }
}